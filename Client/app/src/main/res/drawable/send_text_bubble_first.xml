<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="right" android:width="40dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#dcf8c6" />
            </shape>
        </rotate>
    </item>

    <item android:right="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="#bfd7ab"/>
            <corners android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:bottomLeftRadius="10dp" />
        </shape>
    </item>

    <item android:right="16dp" android:bottom="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#dcf8c6" />
            <corners android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:bottomLeftRadius="10dp"/>
        </shape>
    </item>


</layer-list>